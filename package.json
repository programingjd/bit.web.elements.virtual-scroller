{
  "name": "bit.node.handlers.auth",
  "version": "1.0.0",
  "description": "nodejs http handler for wrapping other handlers behind a user/password authentication",
  "main": "auth.js",
  "scripts": {
    "preinstall": "npm list -g bit-bin -g || npm install bit-bin -g --unsafe-perm",
    "instrument": "rm -rf .nyc && nyc instrument --compact=false --extension .mjs . .nyc",
    "test": "nyc instrument --compact=false --extension .mjs . .nyc && mocha test/virtual-scroller.spec.js",
    "coverage": "nyc --compact=false --extension .mjs report --reporter=text-lcov | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/programingjd/bit.node.handlers.auth.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/programingjd/bit.node.handlers.auth/issues"
  },
  "homepage": "https://github.com/programingjd/bit.node.handlers.auth#readme",
  "devDependencies": {
    "coveralls": "^3.1.0",
    "mocha": "^7.1.2",
    "nyc": "^15.0.1",
    "puppeteer": "^3.0.4"
  },
  "bit": {
    "env": {},
    "componentsDefaultDirectory": "components/{name}",
    "packageManager": "npm"
  }
}
